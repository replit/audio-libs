{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "lib": ["es6"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "downlevelIteration": true,
		"typeRoots": [
			"node_modules/@types"
    ],
  },
  "include": ["src"],
  "exclude": ["src/**/__tests__"]
}
